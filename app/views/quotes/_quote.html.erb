<%= turbo_frame_tag quote do %>
  <div class="quote" data-author-id=<%= quote.user.id %>>
    <%= link_to quote.name,
                quote_path(quote),
                data: { turbo_frame: "_top" } %>
    <%= quote.created_at.strftime("%T %d %B %Y") %>
    <%= quote.user.name %>
    <div class="quote__actions">
      <%= button_to "Delete",
                    quote_path(quote),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_quote_path(quote),
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>